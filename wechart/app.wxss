/**app.wxss**/
/* 全局样式设置 */
page {
  /* 变量控制 */
  --wordColor: red;
  --fontSize: 20px;
  /*  常规设置 */
  padding: 0;
  margin: 0;
  width: 100%;
  height: 92%;
  text-align: center;
  line-height: 100px;
  font-size: var(--fontSize);
  background-color: #e8f3e8;
}

.page__hd {
  height: 100px;
}

image {
  display: block;
  width: 100%;
  height: 350px;
}